<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Approvals</th>
      <th>Disapprovals</th>
      <th>User</th>
      <th>Ffni</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
        <td><%= comment.approvals %></td>
        <td><%= comment.disapprovals %></td>
        <td><%= comment.user %></td>
        <td><%= comment.ffni %></td>
        <td><%= link_to 'Show', [@user, @ffni, comment] %></td>
        <td><%= link_to 'Edit', [:edit, @user, @ffni, comment] %></td>
        <td><%= link_to 'Destroy', [@user, @ffni, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

